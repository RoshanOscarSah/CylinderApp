<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_margin="25dp"
    android:id="@+id/entryLayout"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

<!--customer/company-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/ivToggleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_toggle_background"/>

        <ImageView
            android:id="@+id/ivToggleActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_toggle_active"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/tvCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Customer"
            android:padding="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="left|center"/>

        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Company"
            android:padding="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="right|center"/>

    </FrameLayout>

<!--    select customer-->
    <LinearLayout
        android:id="@+id/llSelectCustomer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ic_rect_corner"
        android:layout_marginTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCustomerOrCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Select Customer"
            android:contentDescription="Select Customer"
            android:textColor="#4DFFFFFF"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="left|center"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ic_address_card"
            android:layout_gravity="right|center"/>

    </LinearLayout>


</LinearLayout>